<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        tools:context=".ProfileActivation"
                android:background="@drawable/navbarxdd">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="42dp"
            android:layout_height="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="310dp"
            android:layout_marginRight="310dp" android:layout_marginBottom="1dp"
            android:id="@+id/retour">
    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="482dp"
            android:orientation="vertical"
    android:background="@drawable/whitebg">



        <RelativeLayout
                android:layout_marginTop="120dp"
                android:layout_width="242dp"
                android:layout_height="47dp"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"

                android:background="@drawable/blue_border_rounded_cornwe">

            <!-- INPUT -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10.5sp"
                    android:textColor="#1566e0"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:text=" "
                    android:id="@+id/message" android:layout_centerHorizontal="true"/>

            <!-- ICON -->
            <ImageView
                    android:id="@+id/admin_icon"
                    android:src="@drawable/admin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            />

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="242dp"
                android:layout_height="44dp"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12.7dp"
                android:background="@drawable/blue_border_rounded_cornwe">

            <!-- INPUT -->
            <EditText
                    android:id="@+id/password1"
                    android:layout_toRightOf="@+id/password1_icon"
                    android:hint="mot de passe"
                    android:textSize="12sp"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:maxLength="10"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@android:color/transparent"
                    android:layout_width="194dp"
                    android:layout_height="match_parent" android:layout_toEndOf="@+id/password1_icon"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"/>

            <!-- ICON -->
            <ImageView
                    android:id="@+id/password1_icon"
                    android:src="@drawable/password"
                    android:layout_width="14.7dp"
                    android:layout_height="10.3dp"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"
            />

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12.7dp"
                android:background="@drawable/blue_border_rounded_cornwe">

            <!-- INPUT -->
            <EditText
                    android:id="@+id/password1verification"
                    android:layout_toRightOf="@+id/icon"
                    android:hint="Retaper mot de passe"
                    android:textSize="12sp"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:maxLength="10"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@android:color/transparent"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content" android:layout_marginLeft="14dp"/>

            <!-- ICON -->
            <ImageView
                    android:id="@+id/icon"
                    android:src="@drawable/password"
                    android:layout_width="14.7dp"
                    android:layout_height="10.3dp"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"
            />

        </RelativeLayout>


        <Button
                android:id="@+id/btnCreer"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Activer"
                android:textColor="#ffffff"
                android:textSize="12sp" />


    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="13.7dp"
                android:orientation="horizontal">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#aeaeae"
                    android:gravity="center_horizontal"
                    android:text="or"
            />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>