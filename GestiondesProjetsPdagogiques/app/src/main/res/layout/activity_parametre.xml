<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navbarxdd"
        tools:context=".Parametre">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="42dp"
            android:layout_height="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="310dp"
            android:layout_marginRight="310dp" android:layout_marginBottom="1dp"
            android:id="@+id/back">
    </LinearLayout>

    <EditText android:id="@+id/telemodfier" android:layout_height="30dp" android:layout_width="165dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.504"
              app:layout_constraintVertical_bias="0.516"/>
    <EditText android:id="@+id/nouveaupass"
            android:layout_width="203dp" android:layout_height="34dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.562"
              app:layout_constraintVertical_bias="0.693"
              android:inputType="textPassword"
    android:hint="mot de passe"/>

    <TextView
            android:layout_width="152dp"
            android:layout_height="13dp"
            android:textSize="10.5sp"
            android:textColor="#1566e0"
            android:layout_gravity="center"
            android:text=""
            android:id="@+id/reponse" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="277dp" android:layout_marginRight="277dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="134dp"
            android:layout_marginStart="134dp" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintVertical_bias="1.0"/>


    <LinearLayout
            android:layout_width="318dp"
            android:layout_height="287dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.597"
            app:layout_constraintVertical_bias="0.67">
        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/emailparam"/>
            <TextView
                    android:id="@+id/emailuser"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="marouan.mdr@gmail.com"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/mobile"/>
            <TextView
                    android:id="@+id/teluser"
                    android:textStyle="bold"

                    android:layout_gravity="center_vertical"
                    android:layout_width="216dp"
                    android:layout_height="31dp"
                    android:paddingLeft="20dp"
                    android:text="+212 225 225">

            </TextView>
            <ImageView
                    android:id="@+id/edittele"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/editlink"/>
        </LinearLayout>
        <LinearLayout

                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/birthdparam"/>
            <TextView
                    android:id="@+id/naissanceuser"
                    android:textStyle="bold"

                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Show all comments"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/passwordparam"/>
            <TextView
                    android:id="@+id/passworduser"
                    android:textStyle="bold"

                    android:layout_gravity="center_vertical"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text=" *******"/>
            <ImageView
                    android:id="@+id/editpassword"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/editlink"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/repeatpass"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/repeat"/>

            <EditText
                    android:id="@+id/renouveaupass"
                    android:textStyle="bold"
                    android:hint="Retaper le mot de passe"
                    android:layout_gravity="center_vertical"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:inputType="textPassword"/>

        </LinearLayout>


    </LinearLayout>

    <Button

            android:textColor="#fff"


            android:layout_gravity="center_horizontal"
            android:layout_width="118dp"
            android:layout_height="33dp"
            android:text="Enregistrer"
            android:textSize="10dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:id="@+id/save"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="162dp"
            android:layout_marginStart="162dp" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.266"/>
    <LinearLayout
            android:background="@mipmap/cadrenv"
            android:orientation="vertical"
            android:layout_width="327dp"
            android:layout_height="160dp" android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="74dp" android:layout_marginStart="74dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintHorizontal_bias="0.452"
            android:id="@+id/linearLayout2"
            android:layout_marginBottom="12dp">

        <ImageView android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="256dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/adminsetting"/>
        <TextView
                android:background="@mipmap/buttoncadre"
                android:gravity="center"
                android:id="@+id/nomuser"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:text="Dryouch Marouane"
                android:textColor="#424242"
                android:textStyle="bold"
                android:textSize="21sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>