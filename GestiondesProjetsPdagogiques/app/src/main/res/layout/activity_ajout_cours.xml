<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AjoutCours"
android:background="@drawable/navbarxdd">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="42dp"
            android:layout_height="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="310dp"
            android:layout_marginRight="310dp" android:layout_marginBottom="1dp"
           android:id="@+id/back">
    </LinearLayout>

    <RelativeLayout
            android:layout_width="384dp"
            android:layout_height="3dp" android:layout_marginEnd="345dp"
            android:layout_marginRight="345dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="592dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.053"
            android:id="@+id/relativeLayout"/>
    <Button

            android:text="Choisir Module"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:id="@+id/choixfiliere" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp" android:layout_marginRight="106dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
    android:background="@mipmap/buttoncadre"/>
    <Button
            android:text="Choisir cours"
            android:layout_width="317dp"
            android:layout_height="47dp"
            android:id="@+id/choixcours"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="105dp" android:layout_marginRight="105dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="109dp"
            android:layout_marginStart="109dp"
            app:layout_constraintHorizontal_bias="0.479" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/nomfiliere"
            android:background="@mipmap/buttoncadre"/>
    <EditText

            android:layout_width="307dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
          android:hint="Titre du cours"
            android:ems="10"
            android:id="@+id/intitule" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/choixcours" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" android:layout_marginRight="71dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"/>
    <Button
            android:background="@drawable/blue_fill__rounded_color"
            android:textColor="#ffffff"
            android:text="terminer"
            android:layout_width="138dp"
            android:layout_height="48dp"

            android:id="@+id/terminer" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/intitule" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="118dp" android:layout_marginStart="118dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="104dp"
            android:layout_marginRight="104dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=""
            android:layout_width="309dp"
            android:layout_height="22dp"
            android:id="@+id/nomfiliere" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintHorizontal_bias="0.628"/>
    <TextView
            android:text="TextView"
            android:layout_width="312dp"
            android:layout_height="21dp"
            android:id="@+id/courschoisi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/choixfiliere" app:layout_constraintHorizontal_bias="0.593"/>


</androidx.constraintlayout.widget.ConstraintLayout>