<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navbarxdd"
        tools:context=".CoursDetail">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="42dp"
            android:layout_height="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="310dp"
            android:layout_marginRight="310dp" android:layout_marginBottom="1dp"
            android:id="@+id/back">
    </LinearLayout>


    <TextView
            android:background="@mipmap/buttoncadre"
            android:text="Choisir un Cours"
            android:layout_width="299dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/titre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="108dp"
            app:layout_constraintHorizontal_bias="0.511"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/list"
            android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"/>

    <ListView
            android:layout_width="294dp"
            android:layout_height="379dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/listcours"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/titre"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.117" app:layout_constraintHorizontal_bias="0.56"/>

</androidx.constraintlayout.widget.ConstraintLayout>