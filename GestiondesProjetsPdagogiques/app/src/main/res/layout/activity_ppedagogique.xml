<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".Ppedagogique"
        android:background="@drawable/navbarxdd">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="42dp"
            android:layout_height="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="310dp"
            android:layout_marginRight="310dp" android:layout_marginBottom="1dp"
            android:id="@+id/back">
    </LinearLayout>

    <RelativeLayout
            android:layout_width="382dp"
            android:layout_height="35dp" android:layout_marginEnd="345dp"
            android:layout_marginRight="345dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="41dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="672dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/relativeLayout">


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="39dp"
            android:background="@drawable/blue_border_rounded_cornwe" android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" android:layout_marginRight="61dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

        <Spinner

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cycle"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.726"

                android:prompt="@string/cycleSpinner"
                android:entries="@array/cycle"/>

    </RelativeLayout>
    <LinearLayout
            android:background="@drawable/blue_border_rounded_cornwe"
            android:orientation="vertical"
            android:layout_width="339dp"
            android:layout_height="405dp"
            android:id="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            android:layout_marginRight="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.543"
            app:layout_constraintHorizontal_bias="0.0">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp"
        >

            <TextView android:text="      Intitulé" android:textSize="18dp" android:layout_width="122dp"
                      android:layout_height="wrap_content" android:layout_marginTop="15dp"
            />

            <EditText android:id="@+id/nom" android:layout_width="195dp" android:layout_height="wrap_content"
                      android:layout_marginLeft="115dp"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="58dp">
            <TextView android:text="     Description" android:textSize="18dp" android:layout_width="wrap_content"
                      android:layout_height="46dp" android:layout_marginTop="15dp"
            />

            <EditText android:id="@+id/description" android:layout_width="190dp" android:layout_height="51dp"
                      android:layout_marginLeft="120dp"
                      android:maxLines="6"
                      android:lines="6"/>


        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent" android:layout_height="65dp">
            <TextView android:text="     Admission" android:textSize="18dp" android:layout_width="wrap_content"
                      android:layout_height="46dp" android:layout_marginTop="15dp"
            />

            <EditText android:id="@+id/admission" android:layout_width="190dp" android:layout_height="45dp"
                      android:layout_marginLeft="120dp"
                      android:maxLines="6"
                      android:lines="6"/>


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="67dp">
            <TextView android:text="      Debouchés  " android:textSize="18dp" android:layout_width="wrap_content"
                      android:layout_height="46dp" android:layout_marginTop="15dp"
            />

            <EditText android:id="@+id/debouches" android:layout_width="183dp" android:layout_height="45dp"
                      android:layout_marginLeft="125dp"
                      android:maxLines="6"
                      android:lines="6"/>


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="67dp">
            <TextView android:text="    Nombre de Semestre " android:textSize="18dp" android:layout_width="wrap_content"
                      android:layout_height="46dp" android:layout_marginTop="15dp"
            />

            <EditText android:id="@+id/semestenb" android:layout_width="90dp" android:layout_height="wrap_content"
                      android:layout_marginLeft="200dp"
         android:inputType="number"
            />


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="45dp">
            <TextView
                    android:text="      La formation est continue ?"
                    android:layout_width="match_parent"
                    android:textSize="18dp"

                    android:textColor="#1c60dd"
                    android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"
                    android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>

            <CheckBox android:id="@+id/checkbox_formation"
                      android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="40mm"
                      android:shadowColor="#1c60dd"

            />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/layoutcout" android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <TextView android:text="  Cout   " android:textSize="18dp" android:layout_width="wrap_content"
                      android:layout_height="46dp" android:layout_marginTop="15dp"
            />

            <EditText
                    android:layout_height="match_parent" android:layout_marginTop="15dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/cout"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="80dp"
            />

        </RelativeLayout>

    </LinearLayout>
    <Button

            android:text="Suivant"
            android:layout_width="105dp"
            android:layout_height="49dp"
            android:id="@+id/suivant" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.964"
            android:background="@drawable/blue_fill__rounded_color"
            android:textColor="#ffff" app:layout_constraintHorizontal_bias="0.503"/>


</androidx.constraintlayout.widget.ConstraintLayout>